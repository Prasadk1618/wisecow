apiVersion: apps/v1
kind: Deployment
metadata:
  name: wisecow-deployment
spec:
  replicas: 2
  selector:
    matchLabels:
      app: wisecow
  template:
    metadata:
      labels:
        app: wisecow
    spec:
      containers:
      - name: wisecow
        image: devopsbabu16/wisecow:latest   # your DockerHub image
        ports:
        - containerPort: 4499                # app runs on 4499 inside container
